---
import '../styles/global.css'
import Navigation from '../components/Navigation.jsx'

const backgroundImageUrl = "https://iili.io/f6dFlvj.jpg";
---

<!doctype html>
<html lang="bg">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Sirma Academy</title>
	</head>

	<body class="relative min-h-screen text-white">
    <!-- Background -->
    <div class="absolute inset-0 -z-10">
      <img src={backgroundImageUrl} class="h-full w-full object-cover"/>

      <div class="absolute inset-0 bg-gradient-to-b from-black/25 via-transparent to-black/20"></div>
    </div>
	<Navigation></Navigation>

		<main class="relative z-10">
			<slot />
		</main>
	</body>

</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
